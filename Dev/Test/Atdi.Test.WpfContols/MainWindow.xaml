<Window x:Class="Atdi.Test.WpfContols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atdi.Test.WpfContols"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <local:OrmDataGrid x:Name="gridMain" AutoGenerateColumns="True" VerticalGridLinesBrush="DarkGray" HorizontalGridLinesBrush="DarkGray" RowHeight="30" HeadersVisibility="Column" Margin="10,10,10,10">
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="10" BorderBrush="SteelBlue"
                            BorderThickness="2" CornerRadius="5">
                        <TextBlock Text="{Binding Path=Title}" TextWrapping="Wrap" 
                                   FontSize="25" MaxWidth="350"></TextBlock>
                        
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </local:OrmDataGrid>
    </Grid>
</Window>
