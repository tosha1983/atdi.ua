                                    </Button>-->
                                </Grid>
                            </Expander>
                            <Expander Header="{DynamicResource Conclusions}" BorderBrush="#FF99B4D1" BorderThickness="1" Margin="0,0,0,4" >
                                <Grid VerticalAlignment="Center" Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{DynamicResource Confirms}" HorizontalAlignment="Right" Margin="4,0" TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="14" TextAlignment="Right" Height="20"/>
                                    <TextBox Text="" Margin="4" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" FontSize="14"/>

                                    <TextBlock Text="{DynamicResource IllegallyOperatingTransmitter}" HorizontalAlignment="Right" Margin="4,0" TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="14" TextAlignment="Right" Height="20" Grid.Row="1"/>
                                    <TextBox Text="" Margin="4" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" FontSize="14" Grid.Row="1"/>

                                    <TextBlock Text="{DynamicResource ViolationOfFrequencyOperationRules}" HorizontalAlignment="Right" Margin="4,0" TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="14" TextAlignment="Right" Height="20" Grid.Row="2"/>
                                    <TextBox Text="" Margin="4" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" FontSize="14" Grid.Row="2"/>

                                    <TextBlock Text="{DynamicResource ViolationOfBandWidthOperationRules}" HorizontalAlignment="Right" Margin="4,0" TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="14" TextAlignment="Right" Height="20" Grid.Row="3"/>
                                    <TextBox Text="" Margin="4" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" FontSize="14" Grid.Row="3"/>

                                </Grid>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem >
