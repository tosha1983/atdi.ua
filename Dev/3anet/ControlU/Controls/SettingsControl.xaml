<UserControl x:Class="ControlU.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlU.Controls"
             xmlns:ident="clr-namespace:ControlU.Controls.Identification"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800"
             >
    <!--Height="480"
             Width="750"-->
    <Border BorderBrush="#FF007ACC" CornerRadius="3" BorderThickness="2" Background="{DynamicResource Brush_Background_Normal}" Padding="2">

        <Grid x:Name="MainGrid">
            <Grid.Resources>
                <local:FreqConverterDecimal x:Key="FreqConverter"/>
                <local:TimeConverter x:Key="TimeConverter"/>
                <local:LevelConverter x:Key="LevelConverter"/>
                <local:MultiValueLevelConverter x:Key="MultiValueLevelConverter"/>
                <local:LocalBooleanDirectToVisibilityConverter x:Key="DirectToVisibilityConverter"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{DynamicResource SettingsControl_Title}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>
            <TabControl TabStripPlacement="Left" Margin="2" Grid.Row="1" >
                <TabItem Header="{DynamicResource SettingsControl_General}" Width="130" BorderBrush="#FFF6F6F6" FontSize="16" Height="30">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="4,4,4,0">
                            <GroupBox Header="{DynamicResource ICSControlLicense}" x:Name="ATDIConnection_EX" BorderBrush="#FF99B4D1" BorderThickness="1" Margin="0,0,0,4" >
                                <Grid VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock>
                                            <Run Text="Owner ID:"/>
                                            <Run Text="{Binding ATDIConnection_Settings.Selected.owner_id,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1">
                                            <Run Text="Product Key:"/>
                                            <Run Text="{Binding ATDIConnection_Settings.Selected.product_key}"/>
                                        </TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{DynamicResource SettingsControl_SensorName}"/>
                                        <TextBox Name="ATDI_SensorNameTemp" Text="{Binding SensorNameTemp,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0" Grid.Column="1"/>
                                        <Button Click="RegisterSensor_Click" DockPanel.Dock="Right" HorizontalAlignment="Right" Grid.Column="2" Margin="5,0,0,0">
                                            <TextBlock Text="{DynamicResource Register}" Margin="10,0"/>
                                        </Button>
                                    </Grid>

                                </Grid>
                            </GroupBox>
                            <Expander Header="{DynamicResource Users_Expander}" BorderBrush="#FF99B4D1" BorderThickness="1" Margin="0,0,0,4" >
                                <Grid VerticalAlignment="Center" Margin="4" Height="27">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Name="Users_Gui" SelectedItem="{Binding Path=UsersApps_Settings.SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              ItemsSource="{Binding Path=UsersApps_Settings.Users,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Height="27" BorderBrush="#FFB9B9B9" FontSize="14">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="Auto" Height="25">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding LAST_NAME}" Height="Auto" HorizontalAlignment="Stretch" FontSize="12" VerticalAlignment="Stretch" />
                                                    <TextBlock Text="{Binding Initials}" Height="Auto" Margin="3,0,0,0" HorizontalAlignment="Stretch" FontSize="12" VerticalAlignment="Stretch" Grid.Column="1" />
                                                    <TextBlock Text="{Binding POSITION}" Height="Auto" Margin="5,0,0,0" HorizontalAlignment="Stretch" FontSize="12" VerticalAlignment="Stretch" Grid.Column="2"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button Click="AddUser_Click" ToolTip="{DynamicResource Create}"  Height="27" VerticalAlignment="Center" Width="27" RenderTransformOrigin="0.5,0.5" DockPanel.Dock="Right" HorizontalAlignment="Right" Grid.Column="1" Margin="4,0,0,0" >
                                        <Path Data="M0,6 L0,-6 M-6,0 L6,0" Stretch="Uniform" Stroke="#FF4F4F4F" VerticalAlignment="Center" HorizontalAlignment="Center" Width="12"/>
                                    </Button>
                                    <Button Click="DeleteUser_Click" ToolTip="{DynamicResource Remove}" Height="27" VerticalAlignment="Center" Width="27" RenderTransformOrigin="0.5,0.5" DockPanel.Dock="Right" HorizontalAlignment="Right" Grid.Column="2" Margin="4,0,0,0" >
                                        <Path Data="M-6,-6 L6,6 M6,-6 L-6,6" Stretch="Uniform" Stroke="#FF4F4F4F" VerticalAlignment="Center" HorizontalAlignment="Center" Width="12" />
                                    </Button>
                                    <!--<Button ToolTip="{DynamicResource Send}" Height="27" VerticalAlignment="Center" Width="27" RenderTransformOrigin="0.5,0.5" DockPanel.Dock="Right" HorizontalAlignment="Right" Grid.Column="3" Margin="4,0,0,0" >
