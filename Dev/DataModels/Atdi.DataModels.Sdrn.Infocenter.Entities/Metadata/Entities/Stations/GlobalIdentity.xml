<?xml version="1.0" encoding="utf-8" ?>
<Entity
  Name        = "GlobalIdentity"
  Title       = "Global Identity"
  Desc        = "The global identification info of the station"
  Type        = "Normal"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>GLOBAL_IDENTITIES</Name>
    <Schema>STATIONS</Schema>
  </DataSource>
  <Fields>
    <Field Name="Id" SourceType="Column"  SourceName="ID" DataType="Counter.64" Title="Record ID" Desc="The identifier of the record of the global identification info"/>
    <Field Name="CreatedDate" SourceType="Column" SourceName="CREATED_DATE" DataType="DateTimeOffset"  Required="true" Title="Created date" Desc="The date of the record created"  />
    

    <Field Name="LicenseGsid" SourceType="Column" SourceName="LICENSE_GSID" DataType="Text.250" Title="License GSID" Desc="The license GSID of station" Required="false"/>
    <Field Name="RealGsid" SourceType="Column" SourceName="REAL_GSID" DataType="Text.250" Title="Real GSID" Desc="The real GSID of station" Required="false"/>
    <Field Name="RegionCode" SourceType="Column" SourceName="REGION_CODE" DataType="Text.50" Title="Region code" Desc="The code of region" Required="false"/>

  </Fields>
  <PrimaryKey Clustered="true">
    <FieldRef Name="Id"/>
  </PrimaryKey>
</Entity>