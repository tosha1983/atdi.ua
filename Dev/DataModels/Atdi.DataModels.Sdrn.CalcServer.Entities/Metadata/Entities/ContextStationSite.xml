<?xml version="1.0" encoding="utf-8" ?>
<Entity
  Name        = "ContextStationSite"
  Title       = "Site of Context Station"
  Desc        = "The site of the context station"
  Type        = "Extension"
  BaseEntity  = "ContextStation"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>CONTEXT_STATIONS_SITE</Name>
    <Schema>CALC</Schema>
  </DataSource>
  <Fields>
    <Field Name="Longitude_DEC" SourceType="Column" Required="true" SourceName="LON_DEC" DataType="Double.30.10" Title="Longitude, DEC" Desc="The Longitude in DEC"/>
    <Field Name="Latitude_DEC" SourceType="Column" Required="true" SourceName="LAT_DEC" DataType="Double.30.10" Title="Latitude, DEC" Desc="The Latitude in DEC"/>
    <Field Name="Altitude_m" SourceType="Column" Required="true" SourceName="ALT_M" DataType="Double.30.10" Title="Altitude, m" Desc="The Altitude in meters"/>
  </Fields>

</Entity>