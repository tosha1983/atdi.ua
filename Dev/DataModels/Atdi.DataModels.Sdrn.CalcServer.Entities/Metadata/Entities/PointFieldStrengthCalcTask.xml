<?xml version="1.0" encoding="utf-8" ?>
<Entity
  Name        = "PointFieldStrengthCalcTask"
  Title       = "Point Field Strength Calculation"
  Desc        = "The task of the Field Strength calculation on Point"
  Type        = "Prototype"
  BaseEntity  = "CalcTask"
  
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>CALCTASKS_POINTFIELDSTRENGTH</Name>
    <Schema>CALC</Schema>
  </DataSource>
  <Fields>

    <Field Name="STATION" SourceType="Reference" SourceName="ContextStation"  Required="true" Title="Station" Desc="The context station" />

    <Field Name="PointLongitude_DEC" SourceType="Column" Required="true" SourceName="POINT_LON_DEC" DataType="Double.30.10" Title="Point Longitude, DEC" Desc="The Point Longitude in DEC"/>
    <Field Name="PointLatitude_DEC" SourceType="Column" Required="true" SourceName="POINT_LAT_DEC" DataType="Double.30.10" Title="Point Latitude, DEC" Desc="The Point Latitude in DEC"/>
    <Field Name="PointAltitude_m" SourceType="Column" Required="true" SourceName="POINT_ALT_M" DataType="Double.30.10" Title="Point Altitude, m" Desc="The Point Altitude in meters"/>

  </Fields>
  
</Entity>