<?xml version="1.0" encoding="utf-8" ?>
<Entity
  Name        = "Project"
  Title       = "Calculation Project"
  Desc        = "The project of the calculation"
  Type        = "Normal"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>PROJECTS</Name>
    <Schema>CALC</Schema>
  </DataSource>
  <Fields>
    <Field Name="Id" SourceType="Column"  SourceName="ID" DataType="Counter.64" Title="Project ID" Desc="The identifier of the project"/>
    <Field Name="Name" SourceType="Column" SourceName="PROJECT_NAME" DataType="Text.250" Required="true" Title="Project Name" Desc="The name of the project." />
    <Field Name="Note" SourceType="Column" SourceName="PROJECT_NOTE" DataType="Text.MAX" Required="false" Title="Project Note" Desc="The note of the project." />
    <Field Name="OwnerInstance" SourceType="Column" SourceName="OWNER_INSTANCE" DataType="Text.250" Required="true" Title="Owner Instance" Desc="The instance of the project owner." />
    <Field Name="OwnerProjectId" SourceType="Column" SourceName="OWNER_PROJECT_ID" DataType="Code.Guid" Required="true" Title="Owner Project ID" Desc="The project identifier generated by the project owner." />
    <Field Name="CreatedDate" SourceType="Column" SourceName="CREATED_DATE" DataType="DateTimeOffset"  Required="true" Title="Created date" Desc="The date of the project created"  />
    <Field Name="StatusCode" SourceType="Column" SourceName="STATUS_CODE" DataType="Code.u08" Required="true" Title="Status Code" Desc="The code of the status of the project"  />
    <Field Name="StatusName" SourceType="Column" SourceName="STATUS_NAME" DataType="Text.50" Title="Status Name" Desc="The name of the status of the project" />
    <Field Name="StatusNote" SourceType="Column" SourceName="STATUS_NOTE" DataType="Text.MAX" Title="Status Note" Desc="The note of the status of the project"/>

    <Field Name="Projection" DataType="Text.50" SourceName="PROJECTION" SourceType="Column" Desc="The projection of the map" Title="Projection" Required="true"/>

  </Fields>
  <PrimaryKey Clustered="true">
    <FieldRef Name="Id"/>
  </PrimaryKey>
</Entity>