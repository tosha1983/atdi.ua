                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Equipments_Settings.Equipments[2].UseEquipment, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="false" >
                            <Setter Property="Visibility" Value="Collapsed"/>
