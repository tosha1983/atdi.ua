                                                      HorizontalAlignment="Center" Width="13" Height="13">
                            <Path.Resources>
                                <Style TargetType="Path">
                                    <Setter Property="Fill" Value="#FF787878"></Setter>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding TechIsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                                <Condition Binding="{Binding IsRuning, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Fill" Value="#7FFF0000"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding TechIsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="False"/>
                                                <Condition Binding="{Binding IsRuning, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Fill" Value="#7FFF0000"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding TechIsEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                                <Condition Binding="{Binding IsRuning, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Fill" Value="#FF4696CC"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Resources>
                        </Path>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" Grid.Column="1">CDMA</TextBlock>
                    <TextBlock Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" Grid.Column="2" Width="110" Margin="5,0,5,0">
