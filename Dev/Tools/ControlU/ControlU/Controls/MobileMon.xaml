    <Grid >
        <Grid.Resources>
            <local:FreqConverter x:Key="FreqConverter"/>
            <local:LocalBooleanDirectToVisibilityConverter x:Key="DirectToVisibilityConverter"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300" Width="5*"/>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        <GridSplitter Margin="1,5" HorizontalAlignment="Center" Grid.RowSpan="5" Grid.Column="1" Panel.ZIndex="1">
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid>
                        <Button>
                            <Grid VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="5"/>
                                </Grid.RowDefinitions>
                                <Ellipse Fill="{DynamicResource Brush_Blue_Light}" Height="3" Width="3" VerticalAlignment="Center" Grid.Row="0" />
                                <Ellipse Fill="{DynamicResource Brush_Blue_Light}" Height="3" Width="3" VerticalAlignment="Center" Grid.Row="1" />
                                <Ellipse Fill="{DynamicResource Brush_Blue_Light}" Height="3" Width="3" VerticalAlignment="Center" Grid.Row="2" />
                                <Ellipse Fill="{DynamicResource Brush_Blue_Light}" Height="3" Width="3" VerticalAlignment="Center" Grid.Row="3" />
                            </Grid>
                        </Button>
                        <Rectangle Fill="#00FFFFFF" />
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>


        <Expander Header="{DynamicResource Settings}" Margin="4,2,0,0" Panel.ZIndex="2" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
            <TabControl TabStripPlacement="Left" Margin="2,8,2,2">
                <TabControl.Effect>
                    <!--// opacity does not need to be specified but it looks cooler when you do-->
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" Color="{DynamicResource Foreground_NormalColor}" />
                </TabControl.Effect>
                <TabItem Header="GSM" Width="70" FontSize="16" Height="25" VerticalAlignment="Bottom">
                    <TabItem.Resources>
                        <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Equipments_Settings.RuSTSMx.UseEquipment, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                        <Condition Binding="{Binding TSMxReceiver_Settings.Option.GSM, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Equipments_Settings.RuSTSMx.UseEquipment, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True"/>
                                        <Condition Binding="{Binding TSMxReceiver_Settings.Option.v, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="2"/>
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TabItem.Resources>
                    <ListBox ItemsSource="{Binding TSMxReceiver_Settings.GSM.Bands}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FF007ACC" CornerRadius="2" BorderThickness="1" Margin="0,2,0,2">
                                    <Grid Margin="4" Width="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Path Data="{DynamicResource ArrowRLeftStop_PathData}" Stretch="Uniform" Width="14" Height="14" Stroke="{DynamicResource Brush_Foreground_Normal}"/>
                                        <TextBlock Text="{Binding Path=FreqStart,Converter={StaticResource FreqConverter}}" FontSize="12" Grid.Row="0" Grid.Column="1"/>

                                        <Path Data="{DynamicResource ArrowRightStop_PathData}" Stretch="Uniform" Width="14" Height="14" Stroke="{DynamicResource Brush_Foreground_Normal}" Grid.Column="4"/>
                                        <TextBlock Text="{Binding Path=FreqStop,Converter={StaticResource FreqConverter}}" FontSize="12" Grid.Row="0" Grid.Column="3"/>

                                        <DockPanel Grid.Row="2" Grid.ColumnSpan="4">
                                            <TextBlock Text="Use" Margin="0,0,2,0" FontSize="14" VerticalAlignment="Center"/>
                                            <CheckBox IsChecked="{Binding Path=Use, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                      Checked="SettingsFreqUse_Changed" Unchecked="SettingsFreqUse_Changed"
                                                      VerticalAlignment="Center" Height="20" Margin="2,0" Style="{DynamicResource CheckBox_Switcher}" HorizontalAlignment="Left"/>
                                        </DockPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <!--<ListBox.Resources>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=RunMeasDVB, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Resources>-->
                    </ListBox>
