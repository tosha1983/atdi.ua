<?xml version="1.0" encoding="utf-8" ?>
<Entity 
  Name        = "SensorLocation" 
  Title       = "SensorLocation" 
  Desc        = "The sensor location"
  Type        = "Normal"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  
  <DataSource Type="Database" Object="Table">
    <Name>XBS_SENSORLOCATION</Name>
    <Schema>ICSM</Schema>
  </DataSource>
  
  <Fields>
    <Field Name="Id" 
     SourceType="Column" 
     SourceName="ID" 
     DataType="Number.15.0" 
     Required="true" 
     Title="Id" 
     Desc="Id"/>

    <Field Name="SensorId"
    SourceType="Column"
    SourceName="SENSORID"
    DataType="Number.15.0"
    Required="true"
    Title="SensorId"
    Desc="SensorId"/>

    <Field Name="DateFrom"
    SourceType="Column"
    SourceName="DATAFROM"
    DataType="DateTime"
    Required="false"
    Title="DateFrom" 
    Desc="DateFrom"/>

    <Field Name="DateTo"
    SourceType="Column"
    SourceName="DATATO"
    DataType="DateTime"
    Required="false"
    Title="DateTo"
    Desc="DateTo"/>

    <Field Name="DateCreated"
    SourceType="Column"
    SourceName="DATACREATED"
    DataType="DateTime"
    Required="false"
    Title="DateCreated"
    Desc="DateCreated"/>

    <Field Name="Status"
    SourceType="Column"
    SourceName="STATUS"
    DataType="Text.25"
    Required="false"
    Title="Status"
    Desc="Status"/>

    <Field Name="Lon"
    SourceType="Column"
    SourceName="LON"
    DataType="Number.22.8"
    Required="false"
    Title="Longitude, DEC"
    Desc="Longitude, DEC"
    Unit="Longitude.DEC"/>

    <Field Name="Lat"
    SourceType="Column"
    SourceName="LAT"
    DataType="Number.22.8"
    Required="false"
    Title="Latitude, DEC"
    Desc="Latitude, DEC"
    Unit="Latitude.DEC"/>

    <Field Name="Asl"
    SourceType="Column"
    SourceName="ASL"
    DataType="Number.22.8"
    Required="false"
    Title="Altitude above sea level, m"
    Desc="Altitude above sea level, m"/>
    
    <Field Name="RelSensorLocation"
              SourceType="Relation"
              SourceName="Sensor"
              Title="Relation SensorLocation to Sensor" >
      <RelationCondition JoinType="Inner">
        <Or>
          <And>
            <Equal>
              <Field Name="#source.Id"/>
              <Field Name="#this.SensorId"/>
            </Equal>
          </And>
        </Or>
      </RelationCondition>
    </Field>  
  </Fields>


  <PrimaryKey Clustered="true">
    <FieldRef Name="Id" SortOrder="Descending" />
  </PrimaryKey>

  </Entity>