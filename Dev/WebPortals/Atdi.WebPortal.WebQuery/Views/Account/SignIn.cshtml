@model SignInViewModel

@{ 
    Layout = "~/Views/Shared/_masterLayout.cshtml";
}

@section DevStylesheets
    {
    <link rel="stylesheet" href="~/css/Account/SignIn.css" media="screen,projection" />
}
@section ProdStylesheets
    {
    <link rel="stylesheet" href="~/css/Account/SignIn.css" media="screen,projection" />
}

<main>
    <div class="container">
        <div class="row">
            <div class="col s12 ">
                <div class="card card-login">
                    <div class="card-login-splash user-view">
                        <img class="_responsive-img" src="~/images/office.jpg" style="width: 100%; height: 100%;">
                    </div>
                    <div class="card-content" style="width: 400px;">
                        <span style="width: 80%; padding-left: 25px" class="card-title"><b>WebQuery Portal</b></span>
                        <div class="row"></div>
                        <form style="width: 80%; padding-left: 25px" asp-action="SignIn" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-antiforgery="true">
                            <div class="input-field">
                                <input asp-for="Username" type="text" class="validate">
                                <label asp-for="Username">Username</label>
                            </div>
                            <div class="input-field">
                                <input asp-for="Password" type="password" class="validate">
                                <label asp-for="Password">Password</label>
                            </div>
                            <br><br>
                            <div>
                                <input class="btn right" type="submit" value="Sign In">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>