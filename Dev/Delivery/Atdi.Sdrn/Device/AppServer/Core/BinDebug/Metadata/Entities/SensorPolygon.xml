<?xml version="1.0" encoding="utf-8" ?>
<Entity 
  Name        = "SensorPolygon" 
  Title       = "SensorPolygon" 
  Desc        = "The sensor polygon"
  Type        = "Normal"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>SENSOR_POLYGON</Name>
    <Schema>dbo</Schema>
  </DataSource>
  <Fields>
    <Field Name="Id" SourceType="Column"  SourceName="ID" DataType="Counter.32" Title="Id" Desc="Id"/>
    <Field Name="SensorId" SourceType="Column" SourceName="SENSOR_ID" DataType="Integer.32" Required="true" Title="SensorId" Desc="SensorId"/>
    <Field Name="Lon" SourceType="Column" SourceName="LON" DataType="Double.30.10" Required="false" Title="Longitude, DEC" Desc="Longitude, DEC" Unit="Longitude.DEC"/>
    <Field Name="Lat" SourceType="Column" SourceName="LAT" DataType="Double.30.10" Required="false" Title="Latitude,  DEC" Desc="Latitude,  DEC" Unit="Latitude.DEC"/>
    <Field Name="SENSOR" SourceType="Reference" SourceName="Sensor" Title="Relation SensorPolygon to Sensor">
      <PrimaryKeyMapping>
        <Mapped KeyFieldName="Id" MatchWith="Field">SensorId</Mapped>
      </PrimaryKeyMapping>
    </Field>
  </Fields>
  <PrimaryKey Clustered="true">
    <FieldRef Name="Id"/>
  </PrimaryKey>
</Entity>