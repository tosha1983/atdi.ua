<?xml version="1.0" encoding="utf-8" ?>
<Entity
  Name        = "MeasStation"
  Title       = "MeasStation"
  Desc        = "The meas station"
  Type        = "Normal"
  xmlns       = "http://schemas.atdi.com/orm/entity.xsd">
  <DataSource Type="Database" Object="Table">
    <Name>XBS_MEASSTATION</Name>
    <Schema>dbo</Schema>
  </DataSource>
  <Fields>
    <Field Name="Id" SourceType="Column"  SourceName="ID" DataType="Counter.64" Title="Id" Desc="Id"/>
    <Field Desc="Station identifier" Title="Station identifier" Name="StationId" DataType="Text.50" SourceName="STATIONID" SourceType="Column" Required="true"/>
    <Field Desc="Global SID" Title="Global SID" Name="GlobalSid" DataType="Text.100" SourceName="GLOBALSID" SourceType="Column" Required="false"/>
    <Field Desc="Owner global SID" Title="Owner global SID" Name="OwnerGlobalSid" DataType="Text.100" SourceName="OWNERGLOBALSID" SourceType="Column" Required="false"/>
    <Field Desc="Status" Title="Status" Name="Status" DataType="Text.20" SourceName="STATUS" SourceType="Column" Required="false"/>
    <Field Desc="Standard" Title="Standard" Name="Standard" DataType="Text.50" SourceName="STANDARD" SourceType="Column" Required="false"/>
    <Field Desc="MeasTaskId" Title="MeasTaskId" Name="MeasTaskId" DataType="Integer.64" SourceName="ID_XBS_MEASTASK" SourceType="Column" Required="true"/>
    <Field Desc="Station owner id" Title="Station owner id" Name="OwnerId" DataType="Integer.64" SourceName="ID_OWNER" SourceType="Column" Required="false"/>
    <Field Desc="Station site id" Title="Station site id" Name="SiteId" DataType="Integer.64" SourceName="ID_SITE" SourceType="Column" Required="false"/>
    <Field Desc="Station license id" Title="Station license id" Name="LicenceId" DataType="Integer.64" SourceName="ID_LICENCE" SourceType="Column" Required="false"/>

    <Field Name="MEASTASK" SourceType="Reference" SourceName="MeasTask" Title="Relation MeasStation to MeasTask">
      <PrimaryKeyMapping>
        <Mapped KeyFieldName="Id" MatchWith="Field">MeasTaskId</Mapped>
      </PrimaryKeyMapping>
    </Field>

    <Field Name="OWNER" SourceType="Reference" SourceName="OwnerData" Title="Relation MeasStation to OwnerData">
      <PrimaryKeyMapping>
        <Mapped KeyFieldName="Id" MatchWith="Field">OwnerId</Mapped>
      </PrimaryKeyMapping>
    </Field>

    <Field Name="SITE" SourceType="Reference" SourceName="StationSite" Title="Relation MeasStation to StationSite">
      <PrimaryKeyMapping>
        <Mapped KeyFieldName="Id" MatchWith="Field">SiteId</Mapped>
      </PrimaryKeyMapping>
    </Field>

    <Field Name="LICENCE" SourceType="Reference" SourceName="StationLicenseInfo" Title="Relation MeasStation to StationLicenseInfo">
      <PrimaryKeyMapping>
        <Mapped KeyFieldName="Id" MatchWith="Field">LicenceId</Mapped>
      </PrimaryKeyMapping>
    </Field>

  </Fields>
  <PrimaryKey Clustered="true">
    <FieldRef Name="Id"/>
  </PrimaryKey>
</Entity>
